---
import StandardHead from "../components/standard-head.astro"
import Navbar from "../components/navbar-main"
import { getSession } from "../lib/game-saving/account"

import { FaArrowAltCircleLeft, FaArrowAltCircleRight } from "react-icons/fa";

import '../global.css'
import '../legacy.scss'

const session = await getSession(Astro.cookies)
---

<html lang='en'>
    <head>
        <StandardHead title={null} />
        <title>Sprig</title>
    </head>

    <div class="navbar">
        <Navbar transparent goldLogo session={session} />
    </div>

    <script src="/coverflow.js" defer />

    <body>
        <section class='fullpage wrapper'>
            <div class='container'>
                <img src='/logo4-advanced.png' class='title' />
            </div>

            <div class="container">
                <div class="coverflow" data-size="500" data-spacing="20" data-flat="false">
                    <img src="advanced-image1.png" >
                    <img src="advanced-image2.png" >
                    <img src="advanced-image0.png" >
                </div>
            </div>

            <div class='text white'>
                <h1 class="text-intro">A <span class="gold">Reimagined</span> Sprig Engine</h1>
                <p>Create and Publish your own Sprig Game <br> powered by the new engine</p>
            </div>

            <div class="container">
                <button class="btn active">
                    Create Advanced Game »
                </button>

                <a class="btn" href="/gallery">
                    Explore Games »
                </a>
            </div>
        </section>

        <br><br>

        <div class="container-border" style="padding-bottom: 2rem;">
            <h1 class="text white text-header">New and Improved Features</h1>

            <div class="text white container">
                <button class="feature-arrow" id="feature-left">
                    <FaArrowAltCircleLeft></FaArrowAltCircleLeft>
                </button>

                <div class="feature">
                    <h3>Game Objects</h3>
                    <p class="feature-detail">Game Objects are the core building blocks of our scenes, designed to persist and function reliably throughout gameplay.</p>
                </div>

                <div class="feature">
                    <h3>Documentation</h3>
                    <p class="feature-detail">The advanced sprig engine ships with in-depth documentation</p>

                    <a class="btn">
                        Documentation
                    </a>
                </div>

                <div class="feature">
                    <h3>Behavior-Driven Logic</h3>
                    <p class="feature-detail">Our engine features a behavior system that enables easy sharing of game logic between different game objects.</p>
                </div>

                <div class="feature">
                    <h3>Animations</h3>
                    <p class="feature-detail">Easily and quickly bring your Game Objects to life with our new animation behavior.</p>
                </div>

                <button class="feature-arrow" id="feature-right">
                    <FaArrowAltCircleRight></FaArrowAltCircleRight>
                </button>
            </div>
        </div>

        <div class="container-border container-criteria" style="padding-bottom: 2rem;">
            <h1 class="text text-header white">Criteria</h1>
            
            <div class="container ">
                <div style="margin-right: 2rem">
                    <p class="text white" style="text-align: start;">In detail, in order to get the grant your game must follow the following criteria:</p>
                    <ul class="text white" style="text-align: start;">
                        <li>Usable <b class="gold">Main/Settings</b> Menu</li>
                        <li>At least <b class="gold">5 unique</b> game mechanics</li>
                        <li>At least <b class="gold">20 hand-drawn sprites</b>, some of which are <b class="gold">animated</b></li>
                        <li>At least <b class="gold">10</b> minutes of gameplay</li>
                        <li>Runnable on a <b class="gold">Sprig</b> game device</li>
                    </ul>
                </div>
                <img src="advanced-image1.png" class="criteria-image base" />    
            </div>
        </div>

        <div class="container-border">
            <h1 class="text white text-header" title="Too Long Didn't Read">ⓘ TLDR</h1>
            <p class="text white">For a game to meet the criteria for a grant, it must be <span class="gold">high quality, unique and fun</span> while being developed for at least <span class="gold">20</span> hours</p>
        </div>
    </body>
</html>

<script>
    const features = document.querySelectorAll(".feature") as NodeListOf<HTMLElement>;
    const featureLeftBtn = document.getElementById("feature-left")! as HTMLButtonElement;
    const featureRightBtn = document.getElementById("feature-right")! as HTMLButtonElement;

    const maxVisible = 3;
    let currentIndex = 0;
    function refresh() {
        checkSelectionBoundaries();
        for (let i = 0; i < features.length; i++) {
            features[i]!.hidden = true
            if (i >= currentIndex && i < currentIndex + maxVisible)
                features[i]!.hidden = false
        }
    }

    function checkSelectionBoundaries() {
        featureLeftBtn.disabled = false
        featureRightBtn.disabled = false

        if (currentIndex == 0)
            featureLeftBtn.disabled = true

        if (currentIndex == features.length - maxVisible)
            featureRightBtn.disabled = true
    }

    function rotateLeft() {
        currentIndex--; refresh();
    }

    function rotateRight() {
        currentIndex++; refresh();
    }

    refresh();
    featureLeftBtn.addEventListener("click", rotateLeft)
    featureRightBtn.addEventListener("click", rotateRight)
</script>

