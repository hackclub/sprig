    h3 {
        text-decoration: underline;
        font-weight: bold;
    }

    .btn {
        margin: 0rem 1rem 0rem 1rem;
    }

    .title {
        width: 36rem;
        margin-bottom: 4.5rem;
    }

    .container {
        display: flex;
        justify-content: center;
    }

    .container-border {
        border: #098969 .2rem solid;        
        margin: 0rem 8rem 4rem 8rem;
        border-radius: .3rem;
        background-color: #FAFFD7;
    }

    .criterion:hover {
        font-size: larger;
    }
    
    .container-criteria {
        justify-content: space-evenly;
    }

    .text {
        text-align: center;
        font-family: Billy, sans-serif;
        font-size: large;
    }

    .gold {
        color: #F8CF00;
    }

    .white {
        color: black;
    }

    .feature {
        border: #098969 .1rem solid;
        border-radius: .75rem;
        padding: 0rem 2rem 0rem 2rem;
        margin: 0rem 1rem 0rem 1rem;

        width: 22rem;
        height: 14rem;


        transition-duration: 0.3s;
        &:hover {
            transform: scale(1.1);
        }
    }

    .feature-detail {
        text-align: justify;
    }

    .feature-arrow {
        font-size: 3rem;
        margin: 0rem 1rem 0rem 1rem;
        background-color: transparent;
        border: none;
        transition-duration: 0.3s;

        color: #80C3A1;
        &:hover {
            color: #098969;
        }

        &[disabled] {
            color: gray;
        }
    }

    .criteria-image {
        width: 16rem;
        height: 12rem;
        transition-duration: 0.3s;
    }

    .image {
        width: 34rem;
        margin: 0rem 2rem 0rem 2rem;
        transition-duration: 0.3s;
    }

    .overlay {
        position: absolute;
        margin-left: auto;
        margin-right: auto;

        box-shadow: 0 0 120px 30px #FAFFD7;

        translate: translateY(0deg) translateZ(140px);

        &:hover {
            transform: scale(1.1);
        }
    }

    .text-header {
        font-size: xx-large;

        transition-duration: 0.3s;
        &:hover {
            transform: scale(1.1);
        }
    }

    .text-intro {
        font-size: xxx-large
    }

    .navbar {
        background-color: #098969;
    }

    .coverflow-left {
        transform: translateX(-15%) rotateY(48deg);
        transform-style: preserve-3d;
        mask-image: linear-gradient(90deg, rgb(64, 36, 36) 0%, rgba(255,255,255,0) 100%);

        &:hover {
            mask-image: none;
            transform: translateX(-35%) scale(0.8);
        }
    }

    .coverflow-right {
        transform: translateX(15%) rotateY(48deg);
        transform-style: preserve-3d;
        mask-image: linear-gradient(270deg, rgb(64, 36, 36) 0%, rgba(255,255,255,0) 100%);
        
        &:hover {
            mask-image: none;
            transform: translateX(35%) scale(0.8);
        }
    }
