---
import '../../../../global.css'
import Docs from '../../../../layouts/docs.astro'

const data = (
  (await Astro.glob(`/src/translations/*.json`)).find(
    (translation) =>
      translation.default.lang == (Astro.url.searchParams.get("lang") || "en_US")
  ) || {}
).default;
---

<Docs dspriki={data["tutorials.categories.dspriki.github.upr"]} dtitle={data["tutorials.categories.dtitle.github.upr"]} dauthor={data["tutorials.categories.dauthor.github.upr"]} >
    <p>{data["tutorials.categories.dspriki.github.upr.step1"]}<b><code>Files changed</code></b></p>
    <br />
    <img class="img-tutorial" src='https://cloud-csju13717-hack-club-bot.vercel.app/0image.png'>
    <br />
    <p>{data["tutorials.categories.dspriki.github.upr.step2"]}<b><code>...</code></b></p>
    <br />
    <img class="img-tutorial" src='https://cloud-csju13717-hack-club-bot.vercel.app/1image.png'>
    <br />
    <p>{data["tutorials.categories.dspriki.github.upr.step3"]}</data><b><code>Edit file</code></b></p>
    <br />
    <img class="img-tutorial" src='https://cloud-csju13717-hack-club-bot.vercel.app/2image.png'>
    <br />
    <p>{data["tutorials.categories.dspriki.github.upr.step4"]}<b><code>Commit changes</code></b></p>
    <br />
    <img class="img-tutorial" src='https://cloud-csju13717-hack-club-bot.vercel.app/3image.png'>
</Docs>